<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EhImageZipViewer"
             xmlns:localControls="clr-namespace:EhImageZipViewer.Controls"
             x:Class="EhImageZipViewer.GalleryViewPage"
             Loaded="ContentPage_Loaded"
             Unloaded="ContentPage_Unloaded"
             Shell.NavBarIsVisible="false">

    <Grid>
        <localControls:GalleryView x:Name="MainView" />
        <Label x:Name="debugInfo" HorizontalOptions="End" VerticalOptions="End"
               BackgroundColor="{AppThemeBinding Dark=Black, Light=White}" Text=""/>
    </Grid>

</ContentPage>